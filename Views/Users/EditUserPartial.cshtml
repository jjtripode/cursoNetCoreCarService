@model EditUserViewModel
<form asp-action="EditUser" method="POST">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Agregar Service</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="form-group">

                    <span> @Model.User.UserName </span>

                </div>
                <div class="form-group">

                    <span> @Model.User.Email </span>

                </div>

                <div class="form-group">
                    <label asp-for="Roles" class="control-label">Roles:</label>
                    <select asp-for="Rol" asp-items="@(new SelectList(Model.Roles))" class="form-control"></select>
                    <input type="hidden" asp-for="UserId "></input>
                </div>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
                <button type="submit" class="btn btn-primary">Guardar</button>
            </div>
        </div>
    </div>
</form>