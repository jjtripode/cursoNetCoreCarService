@model AddServiceViewModel


<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModalCenter">
    Agregar
</button>
<form asp-action="AddService" method="POST">
    <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLongTitle">Modal title</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label for="Date" asp-for="Date" class="col-form-label">Fecha Service</label>
                        <input asp-for="Date">
                    </div>
           
                    <div class="form-group">
                        <label for="Price" asp-for="Price" class="col-form-label">Precio</label>
                        <input asp-for="Price">
                    </div>
                  <div class="col-sm.-6">
                        <label asp-for="StatusId" class="control-label">Estado:</label>
                        <select asp-for="StatusId" asp-items="@(new SelectList(Model.StatusList,"ID", "Descripcion"))" class="form-control"></select> 
                    </div>
                   <div class="col-sm.-6">
                        <label asp-for="ServiceTypeId" class="control-label">Tipo Service:</label>
                        <select asp-for="ServiceTypeId" asp-items="@(new SelectList(Model.ServicesType,"ID","Descripcion"))" class="form-control"></select> 
                    </div>
           
           <input type="hidden" asp-for="VehicleId" value="@Model.VehicleId">
           <input type="Text" asp-for="VehicleId" value="@Model.VehicleId">

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Guardars</button>
                </div>
            </div>
        </div>
    </div>
</form>





