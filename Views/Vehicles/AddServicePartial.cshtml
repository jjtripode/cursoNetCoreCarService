@model AddServiceViewModel

<form asp-action="AddService" method="POST">
      <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLongTitle">Agregar Service</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">

                    <div class="form-group">
					
                           <label asp-for="Date" asp-for="Date" class="col-form-label">Fecha Service</label>
                           <input asp-for="Date" id="dtpDateService" placeholder="dd/MM/yyyy" autocomplete="off" ></input>
                  
				  </div>
                    <div class="form-group">
					
                        <label asp-for="PriceId" class="control-label">Precio:</label>
                        <select asp-for="PriceId" asp-items="@(new SelectList(Model.Prices,"ID", "Value"))" class="form-control"></select> 
						  
                    </div>
                    <div class="form-group">
					
                        <label asp-for="StatusId" class="control-label">Estado:</label>
                        <select asp-for="StatusId" asp-items="@(new SelectList(Model.StatusList,"ID", "Descripcion"))" class="form-control"></select> 
	
                    </div>

                    <div class="form-group">
					
                       <label asp-for="ServiceTypeId" class="control-label">Tipo Service:</label>
 <select asp-for="ServiceTypeId" asp-items="@(new SelectList(Model.ServicesType,"ID","Descripcion"))" class="form-control"></select> 
<input type="hidden" asp-for="VehicleId "></input>                    
					</div>
					
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
                    <button type="submit" class="btn btn-primary">Guardar</button>
                </div>
            </div>
        </div>
</form>
