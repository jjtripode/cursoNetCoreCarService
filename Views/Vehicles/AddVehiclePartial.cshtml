@model AddVehicleViewModel

<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#AddVehicleModal">
    Agregar
</button>
<form asp-action="AddVehicle" method="POST">
    <div class="modal fade" id="AddVehicleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLongTitle">Agregar Vehiculo</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">

                    <div class="form-group">
                        <label asp-for="Brand" class="control-label">Marca</label>
                        <select asp-for="Brand" asp-items="@(new SelectList(Model.Brands, "Descripcion", "Descripcion"))" class="form-control"></select>
                    </div>
                    <div class="form-group">
                        <label asp-for="VehicleModel" class="control-label">Modelo:</label>
                        <select asp-for="VehicleModel" asp-items="@(new SelectList(Model.Brands[0].Models))" class="form-control"></select> 
                    </div>
                    <div class="form-group">
                        <label for="CarLicensePlate" asp-for="CarLicensePlate" class="col-form-label">Patente</label>
                        <input asp-for="CarLicensePlate">
                    </div>

                    <div class="form-group">
                        <label for="ManufacturingDate" asp-for="ManufacturingDate" class="col-form-label">Fecha Fabricacion</label>
                        
                         <input asp-for="ManufacturingDate" id="ManufacturingDatepicker" value="@DateTime.Today"  />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Guardar</button>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts{
	<script type="text/javascript">

		$('#ManufacturingDatepicker').datepicker({
			format: 'dd/mm/yyyy',
			uiLibrary: 'bootstrap4',
             "setDate": new Date()
		});
		$('#datepicker1').datepicker({
			format: 'dd/mm/yyyy',
			uiLibrary: 'bootstrap4'
		});
	</script>
}
